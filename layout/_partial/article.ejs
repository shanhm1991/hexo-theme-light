<article id="<%= item.layout %>-<%= item.slug %>" class="h-entry <%= item.layout %>" itemprop="blogPost" itemscope itemtype="https://schema.org/BlogPosting">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time class="dt-published" datetime="<%= item.date.toDate().toISOString() %>" style="margin-bottom: 10px;"><a href="<%- config.root %><%- item.path %>" style="color: #736f6f;"><%= item.date.format(config.date_format) %></a></time>
      <% } %>
      <%- partial('post/title') %>
    </header>
      
    <div class="e-content entry" itemprop="articleBody">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
	
    <footer>
      <% if (index){ %>
        <% if (item.excerpt){ %>
          <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
        <% if (item.comment && config.disqus_shortname){ %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
        </div>
        <% } %>
      <% } else { %>
	  
	    <% if (is_post()){ %>
	<nav id="pagination">
	  <% if(item.prev){ %>
		  <a class="alignleft prev" href="<%- url_for(item.prev.path) %>">
		    <%= item.prev.title %>
		  </a>
	  <% } %>
	  
	  <% if(item.next){ %>
		  <a class="alignright next" href="<%- url_for(item.next.path) %>">
		    <%= item.next.title %>
		  </a>
	  <% } %>
	  <div class="clearfix"></div>
	</nav>
	<% } %>
	    
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
        <%- partial('post/share') %> 		        
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<%- partial('comment') %>
