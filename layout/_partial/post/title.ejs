<% if (item.link){ %>

  <% if (item.title){ %>
  
    <h1 class="title">
       <a href="<%- item.link %>" target="_blank"><%= item.title %></a>
    </h1>
    
  <% } else { %>
  
    <h1 class="title">
       <a href="<%- item.link %>" target="_blank"><%= item.link %></a>
    </h1>
    
  <% } %>
  
<% } else { %>

  <% if (index){ %>
  
    <h1 class="title">
       <a href="<%- config.root %><%- item.path %>"><%= item.title %></a>
    </h1>
    
  <% } else { %>
  
    <h1 class="p-name title" itemprop="headline name">
        <%= item.title %>
    </h1>
    
    <% if (item.subtitle){ %>
       <div class="title" style="padding: 5px 0px 20px 10px; color: #766;">
            ———— <%= item.subtitle %>
       </div> 
    <% } %>
  
  <% } %>
  
<% } %>

<script async src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>
<% if (is_post()){ %>

   <span style="line-height:35px; height:35px; ">  </span>

   <font style="color: #999;"> words: <%= wordcount(page.content) %>  &nbsp;&nbsp; views: <span id="busuanzi_value_page_pv"></span> &nbsp;&nbsp; time: <%=  min2read(page.content) %>min</font>
   
   <%- partial('category') %>
   
   <%- partial('tag') %>
   
   <hr style="background-color: #ddd; height:1px; border:none;" /><br>
   
<% } %>
