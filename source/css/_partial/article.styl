icon-size = 32px
icon-gap = 25px

article
  box-shadow 1px 2px 3px #dddc
  background #fff
  &.page
    padding-left 20px
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f073'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    padding 20px 20px 15px (icon-size + icon-gap + 15)
    margin-bottom 50px
    position relative
    @media screen and (max-width: 600px)
      padding-left 20px

  .gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  header
    .icon
      width icon-size
      height icon-size
      margin-right icon-gap
      position absolute
      top 22px
      left 20px
      color #736f6f
      @media screen and (max-width: 600px)
        display none
      &:before
        position absolute
        font 28px font-icon
        top 0
        left 0
        width 32px
        text-align center

    time
      color color-meta
      font 0.9em font-title
      margin-bottom 5px
      display block
      line-height 1
      
    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        font 1.1em font-icon
        padding-right 10px
        vertical-align middle

      &.more-link
        &:before
          content '\f054'

      &.comment-link
        &:before
          content '\f075'

    .title
      font-weight normal
      a
        color color-font
        &:hover
          color color-link
          text-decoration none
          
    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon
        color #999

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px

    .tags
      &:before
        content '\f02b'
        top 3px
        left 2px
          
  .entry
    text-align justify
    line-height 1.6
    p, blockquote, ul, ol, dl, table, iframe, .video-container
      margin-top 15px
	  
	img
      max-width 100%

    table
      border-collapse collapse
      border-spacing 0
      empty-cells show
      border none
	  table-layout fixed
      width 100%

      th
        white-space nowrap
        color color-font
        font-weight 600
        background #eee

      td,
      th
        border 1px solid lighten(color-border, 2)
        padding 2px
        text-align left

    blockquote
      background: #f6f6f6
      border-left: 6px solid #DDD
      font-style ormal
      font-family font-serif
      font-size 1em
      padding 0 0 2px 6px
      text-align left
      footer
        border-top none
        font-size 1em
        line-height 1
        margin 5px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    code, pre
      font-family font-mono

    code
      background #eee
      color #666
      padding 0 5px
      margin 0 2px
      font-size 0.9em
      border 1px solid color-border
      border-radius 3px

    pre
	  overflow-y hidden
	  overflow-x auto
      background #eee
      border none
      margin-top 10px
      padding 7px 15px
      border-radius 2px
      code
        background none
        padding 0
        margin 0
        border none
        border-radius 0

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1
      border-bottom 1px solid color-border
    h1, h2, h3, h4, h5, h6
      font-weight normal
      padding-bottom 5px
      margin-top 12px

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .caption
      display block
      margin-top 5px
      color color-meta
      position relative
      font-size 0.9em
      padding-left 25px
      &:before
        content '\f040'
        position absolute
        font 1.3em font-icon
        position absolute
        left 0
        top 3px

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  footer
    margin-top 15px
    padding-top 10px
    border-top 1px solid color-border
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        font 1.1em font-icon
        padding-right 10px
        vertical-align middle

      &.more-link
        &:before
          content '\f054'

      &.comment-link
        &:before
          content '\f075'

    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px

    .tags
      &:before
        content '\f02b'
        top 3px
        left 2px

    .addthis
      margin-top 15px
      iframe
        margin-top 0
    
